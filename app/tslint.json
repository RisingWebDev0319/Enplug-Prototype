{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "codelyzer"
  ],
  "rules": {
    "array-type": false,
    "arrow-parens": false,
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      "check-space",
      true
    ],
    "component-class-suffix": true,
    "component-selector": [
      "element",
      "ep",
      "kebab-case",
      true
    ],
    "curly": true,
    "deprecation": {
      "severity": "warn"
    },
    "directive-class-suffix": true,
    "directive-selector": [
      "attribute",
      "camelCase",
      "ep",
      true
    ],
    "eofline": true,
    "forin": true,
    "import-blacklist": [
      "lodash",
      true
    ],
    "import-spacing": true,
    "indent": [
      "spaces",
      2,
      true
    ],
    "interface-name": false,
    "interface-over-type-literal": true,
    "label-position": true,
    "max-classes-per-file": false,
    "max-line-length": [
      140,
      true
    ],
    "member-access": [
      false,
      false
    ],
    "member-ordering": [
      "static-before-instance",
      "variables-before-functions",
      true,
      {
        "order": [
          "instance-field",
          "instance-method",
          "static-field",
          "static-method"
        ]
      }
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-consecutive-blank-lines": true,
    "no-console": [
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace",
      true
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": [
      "allow-empty-catch",
      true
    ],
    "no-empty-interface": true,
    "no-eval": true,
    "no-inferrable-types": [
      "ignore-params",
      false
    ],
    "no-input-rename": true,
    "no-non-null-assertion": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-redundant-jsdoc": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      "as-needed",
      true
    ],
    "object-literal-sort-keys": false,
    "one-line": [
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace",
      true
    ],
    "ordered-imports": true,
    "prefer-const": true,
    "quotemark": [
      "single",
      true
    ],
    "radix": true,
    "semicolon": [
      "always"
    ],
    "trailing-comma": false,
    "triple-equals": [
      "allow-null-check",
      true
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "unified-signatures": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "variable-name": true,
    "whitespace": [
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      true
    ]
  }
}
